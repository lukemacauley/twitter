<% @posts.each do |post| %>

  <h3><%= link_to post.title, post %></h3>

  <p><%= markdown(post.text).html_safe %></p>

		<% if current_user == post.user %>
    	<p>
    		<%= link_to 'Edit', edit_post_path(post) %>
    		|
    		<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    	</p>
		<% end %>
<% end %>